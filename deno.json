{
    "compilerOptions": {
        "strict": true
    },
    "fmt": {
        "indentWidth": 4
    },
    "imports": {
        "@std/assert": "jsr:@std/assert@^1.0.13",
        "@std/fmt": "jsr:@std/fmt@^1.0.7",
        "@std/fs": "jsr:@std/fs@^1.0.17",
        "@std/testing": "jsr:@std/testing@^1.0.11"
    },
    "lint": {
        "rules": {
            "include": [
                "default-param-last",
                "eqeqeq",
                "explicit-function-return-type",
                "explicit-module-boundary-types",
                "no-boolean-literal-for-arguments",
                "no-console",
                "no-eval",
                "no-inferrable-types",
                "no-non-null-assertion",
                "no-slow-types",
                "single-var-declarator"
            ]
        },
        "plugins": [
            "./lint/prefer-private-hash/plugin.ts",
            "./lint/no-public-keyword/plugin.ts",
            "./lint/naming-convention/plugin.ts"
        ]
    },
    "tasks": {
        "lint": "deno lint && deno task fmt:license-headers --check",
        "fmt:license-headers": "deno run --allow-read --allow-write ./_tools/check_license.ts",
        "ok": "deno task lint && deno fmt --check && deno test --doc"
    },
    "workspace": [
        "./types",
        "./functional",
        "./lint/prefer-private-hash",
        "./lint/no-public-keyword",
        "./lint/naming-convention"
    ]
}
